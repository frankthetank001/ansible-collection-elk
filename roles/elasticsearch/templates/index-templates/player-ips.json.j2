{
    "index_patterns": ["player_ips*"],
    "template": {
        "settings": {
            "refresh_interval": "5s",
            "number_of_shards": {{ elasticsearch_hosts | length }},
            "number_of_replicas": {{ [elasticsearch_hosts | length - 1, 0] | max }}
        },
        "mappings": {
            "dynamic": "strict",  # Add this line to prevent unknown fields
            "dynamic_date_formats": [
                "strict_date_optional_time",
                "yyyy/MM/dd HH:mm:ss Z||yyyy/MM/dd Z"
            ],
            "properties": {
                "@timestamp": {
                    "type": "date"
                },
                "Match": {
                    "properties": {
                        "Player": {
                            "properties": {
                                "Name": {
                                    "type": "keyword"
                                },
                                "IP": {
                                    "type": "ip"
                                }
                            }
                        }
                    }
                },
                "player_ip": {
                    "type": "ip"
                }
            }
        }
    }
}
