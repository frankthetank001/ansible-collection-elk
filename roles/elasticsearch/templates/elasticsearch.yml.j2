# ======================== Elasticsearch Configuration =========================
#
# NOTE: Elasticsearch comes with reasonable defaults for most settings.
#       Before you set out to tweak and tune the configuration, make sure you
#       understand what are you trying to accomplish and the consequences.
#
# The primary way of configuring a node is via this file. This template lists
# the most important settings you may want to configure for a production cluster.
#
# Please consult the documentation for further information on configuration options:
# https://www.elastic.co/guide/en/elasticsearch/reference/index.html
#
# ---------------------------------- Cluster -----------------------------------
#
# Use a descriptive name for your cluster:
#
cluster.name: {{ elasticsearch_cluster_name }}

#
# ------------------------------------ Node ------------------------------------
#
# Use a descriptive name for the node:
#
node.name: {{ inventory_hostname|lower }}
#
# Add custom attributes to the node:
#
#node.attr.rack: r1
#
node.roles:
{% for role in elasticsearch_default_node_roles %}
  - {{ role }}
{% endfor %}
{% if inventory_hostname in groups['elasticsearch_data'] %}
  - data
{% endif %}
{% if inventory_hostname in groups['elasticsearch_master'] %}
{% if elasticsearch_master_is_also_data_node %}
  - data
{% endif %}
{% endif %}
# ----------------------------------- Paths ------------------------------------
#
# Path to directory where to store the data (separate multiple locations by comma):
#
path.data: {{ elasticsearch_data_dir }}
#
# Path to log files:
#
path.logs: {{ elasticsearch_log_dir }}
#
# ----------------------------------- Memory -----------------------------------
#
# Lock the memory on startup:
#
bootstrap.memory_lock: true
#
# Make sure that the heap size is set to about half the memory available
# on the system and that the owner of the process is allowed to use this
# limit.
#
# Elasticsearch performs poorly when the system is swapping the memory.
#
# ---------------------------------- Network -----------------------------------
#
# By default Elasticsearch is only accessible on localhost. Set a different
# address here to expose this node on the network:
#
network.host: 0.0.0.0
{% if elasticsearch_resolv_mode == 'dns' %}
network.publish_host: {{ inventory_hostname|lower }}
{% else %}
network.publish_host: {{ elastic_ip_address }}
{% endif %}
#
# By default Elasticsearch listens for HTTP traffic on the first free port it
# finds starting at 9200. Set a specific HTTP port here:
#
http.port: "{{ hostvars[inventory_hostname].elasticsearch_http_port | default(elasticsearch_http_port) }}"
transport.port: "{{ hostvars[inventory_hostname].elasticsearch_transport_port | default(elasticsearch_transport_port) }}"
#
# For more information, consult the network module documentation.
#
# --------------------------------- Discovery ----------------------------------
discovery.type: "multi-node"
discovery.seed_hosts:
{% for host in groups['elasticsearch'] %}
{% if host == inventory_hostname %}
  #- "{{ hostvars[host].ansible_host | default(host) }}:{{ hostvars[host].elasticsearch_transport_port | default('9300') }}"
  - "{{ host }}:{{ hostvars[host].elasticsearch_transport_port | default('9300') }}"
{% else %}
  #- "{{ hostvars[host].ansible_host | default(host) }}:{{ hostvars[host].elasticsearch_transport_port | default('9300') }}"
  - "{{ host }}:{{ hostvars[host].elasticsearch_transport_port | default('9300') }}"
{% endif %}
{% endfor %}
cluster.initial_master_nodes:
{% for host in groups['elasticsearch_master'] %}
{% if host == inventory_hostname %}
  - "{{ hostvars[host].ansible_host | default(host) }}:{{ hostvars[host].elasticsearch_transport_port | default(elasticsearch_transport_port) }}"
{% else %}
  #- "{{ hostvars[host].ansible_host | default(host) }}:{{ hostvars[host].elasticsearch_transport_port | default('9300') }}"
  - "{{ host }}:{{ hostvars[host].elasticsearch_transport_port | default('9300') }}"
{% endif %}
{% endfor %}
#
# ---------------------------------- Various -----------------------------------
#
# Allow wildcard deletion of indices:
#
#action.destructive_requires_name: false

# ---------------------------------- Security -----------------------------------

{% if elasticsearch_security_enabled %}
xpack.security.transport.ssl.enabled: true
xpack.security.transport.ssl.verification_mode: certificate 
xpack.security.transport.ssl.client_authentication: required
xpack.security.transport.ssl.keystore.path: {{ elasticsearch_certs_dir }}/{{ elasticsearch_cert_filename }}
#xpack.security.transport.ssl.truststore.path: {{ elasticsearch_certs_dir }}/{{ elasticsearch_cert_filename }}
xpack.security.authc.api_key.enabled: true
xpack.security.transport.ssl.certificate_authorities: {{ elasticsearch_certs_dir }}/{{ elasticsearch_ca_chain_name }}
{% else %}
xpack.security.enabled: false
xpack.security.transport.ssl.enabled: false
{% endif %}


{% if elasticsearch_https_enabled %}
xpack.security.http.ssl.enabled: true
xpack.security.http.ssl.keystore.path: {{ elasticsearch_certs_dir }}/http.p12
xpack.security.http.ssl.certificate_authorities: {{ elasticsearch_certs_dir }}/{{ elasticsearch_ca_chain_name }}
{% else %}
xpack.security.http.ssl.enabled: false
{% endif %}
